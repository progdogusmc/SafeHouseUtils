<Window x:Class="Remote_Entry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remote_Entry"
        mc:Ignorable="d"
        Title="Restarting Remote Entry..." Height="150" Width="400" Loaded="Window_Loaded" Icon="Safehaus.ico" Closed="Window_Closed">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock x:Name="StatusTextBlock" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="24" FontWeight="DemiBold">Connecting To SafeHouse...</TextBlock>
            <TextBlock x:Name="ErrorTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Left" Margin="16,16,16,0" Visibility="Collapsed" xml:space="preserve">Try:<LineBreak/><LineBreak/><Bold>·</Bold>    Restarting your router<LineBreak/><LineBreak/><Bold>·</Bold>    Reboot your computer<LineBreak/><LineBreak/><Bold>·</Bold>    Call your internet provider</TextBlock>
        </StackPanel>
    </Grid>
</Window>
